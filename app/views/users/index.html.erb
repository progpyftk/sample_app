<div class="container">
  <table class="table table-bordered">
    <thead>
      <tr>
        <th>Name</th>
        <th>Email</th>
        <% if current_user.admin? %>
          <th>Delete</th>
        <% end %>
      </tr>
    </thead>
    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td><%= user.name %></td>
          <td><%= user.email %></td>
          <% if current_user.admin? && !current_user?(user) %>
            <td>
              <%= link_to "Delete", user, method: :delete,class:"btn btn-danger" ,data: { confirm: "You sure?" } %>
              <%= link_to "Edit", user, method: :delete,class:"btn btn-primary" ,data: { confirm: "You sure?" } %>
            </td>
          <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>
  <%= @session_teste %>
</div>
